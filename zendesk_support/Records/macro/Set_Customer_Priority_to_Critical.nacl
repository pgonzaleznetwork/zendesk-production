zendesk_support.macro Set_Customer_Priority_to_Critical@s {
  title = "Set Customer Priority to Critical"
  active = true
  actions = [
    {
      field = zendesk_support.ticket_field.instance.Customer_Priority_tagger@su
      value = zendesk_support.ticket_field__custom_field_options.instance.Customer_Priority_tagger_su__high@uumuu
    },
    {
      field = "comment_mode_is_public"
      value = "true"
    },
    {
      field = "comment_value_html"
      value = "<p>We are escalating this case to the next tier.&nbsp;</p><p><br></p><p>New Priority: {{${ zendesk_support.ticket_field.instance.Customer_Priority_tagger@su }}}</p><p><br></p><p>{{ticket.ticket_field_option_title_5848842841875}}<br></p><p><br></p><p>Please note your SLA is based on your support level: {{${ zendesk_support.ticket_field.instance.Support_Level_tagger@su }}}<br></p><p><br></p><p>Your support engineer</p><p>{{ticket.assignee.name}}â€‹&nbsp;</p>"
    },
    {
      field = "set_tags"
      value = [
        zendesk_support.tag.instance.customer_notified,
      ]
    },
  ]
  raw_title = "Set Customer Priority to Critical"
  restriction = {
    type = "Group"
    ids = [
      zendesk_support.group.instance.Tier_3___EMEA@ssbs,
    ]
  }
}
